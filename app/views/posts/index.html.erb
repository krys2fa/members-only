<div class="section">
	<div class="container">
	<div class="columns is-centered">

    <div class="column is-4">
<h1 class="post">Posts</h1>

<% @posts.each do |p| %>
  <div class="content">
    <strong><%= p.title.upcase %></strong><br/>
    <small><%= p.body %></small><br/>
    <% if user_signed_in? %>
      <div class="owner" >
        Written by: <%= p.user.name %>
        </div>
    <% end %>
    <hr/>
  </div>
<% end %>
</div>
</div>
</div>
</div>