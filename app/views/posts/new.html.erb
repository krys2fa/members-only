<div class="section">
	<div class="container">
	<div class="columns is-centered">
    <div class="column is-4">
      <h1 class="post">Post</h1>
        <%= form_with model: @post, class: "nifty_form" do |f| %>
          <div class="field">
            <%= f.label :title %><br />
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <%= f.label :body %><br />
            <%= f.text_area :body, size: "60x12" %>
          </div>
          <div class="actions">
            <%= f.submit "Create", class: "button is-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



